<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp">

    <ImageView
        android:id="@+id/quotimglove"
        android:layout_width="350sp"
        android:layout_height="350sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/heart"
        android:scaleType="centerCrop"
        android:layout_marginTop="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quotimglove"
        android:layout_margin="10sp">

        <ImageView
            android:id="@+id/imglike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/txtlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/imglike"
            android:text="@string/love"/>

        <ImageView
            android:id="@+id/imgsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:src="@drawable/bookmark"
            android:layout_toEndOf="@+id/txtlike"/>

        <TextView
            android:id="@+id/txtsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/imgsave"
            android:text="Save"/>

        <ImageView
            android:id="@+id/imgshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:src="@drawable/share_2"
            android:layout_toEndOf="@id/txtsave"/>

        <TextView
            android:id="@+id/txtshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/imgshare"
            android:text="Share"/>


    </RelativeLayout>

</RelativeLayout>